@import './theme.styl'
cleanDefaultStyle()
  appearance: none
  border: none
  outline: none

btn(currentColor, border = false) 
  padding: 0 10px
  border-radius: 5px
  cursor: pointer
  cleanDefaultStyle()

  if(border == true)
    border: 1px solid currentColor
  else
    background-color: currentColor
    color: #fff

primaryBtn()
  btn($lightred)
primaryBorderBtn()
  btn($lightred, true)
infoBtn()
  btn($green)